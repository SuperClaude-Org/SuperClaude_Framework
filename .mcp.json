{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@context7/mcp"
      ]
    },
    "magic": {
      "command": "npx",
      "args": [
        "-y",
        "@21st/mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "playwright-mcp-server"
      ]
    },
    "morphllm-fast-apply": {
      "command": "npx",
      "args": [
        "-y",
        "morphllm-fast-apply-mcp-server"
      ]
    },
    "serena": {
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/serena-wrapper.sh",
      "env": {
        "SERENA_MEMORY_PATH": "${CLAUDE_PLUGIN_ROOT}/memory"
      }
    },
    "tavily": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp-server"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp-server"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    }
  }
}
